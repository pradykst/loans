// File: contracts/6_nftloan.sol


pragma solidity ^0.8.0;



contract NFTLending is Ownable {
    struct Loan {
        address borrower;
        address lender;
        uint256 loanAmount;
        uint256 collateralId;
        IERC721 collateralContract;
        uint256 dueDate;
        bool repaid;
    }

    constructor() Ownable(msg.sender) {
    }

    mapping(uint256 => Loan) public loans;
    uint256 public loanCounter;

    event LoanRequested(uint256 loanId, address borrower, address lender, uint256 loanAmount, uint256 collateralId, address collateralContract, uint256 dueDate);
    event LoanRepaid(uint256 loanId);
    event LoanDefaulted(uint256 loanId);

    function requestLoan(uint256 loanAmount, uint256 collateralId, IERC721 collateralContract, uint256 loanDuration, address lender) external {
        require(collateralContract.ownerOf(collateralId) == msg.sender, "You must own the NFT to use it as collateral");
        require(collateralContract.isApprovedForAll(msg.sender, address(this)), "Contract must be approved to transfer the NFT");

        collateralContract.transferFrom(msg.sender, address(this), collateralId);

        loanCounter++;
        loans[loanCounter] = Loan({
            borrower: msg.sender,
            lender: lender,
            loanAmount: loanAmount,
            collateralId: collateralId,
            collateralContract: collateralContract,
            dueDate: block.timestamp + loanDuration,
            repaid: false
        });

        emit LoanRequested(loanCounter, msg.sender, lender, loanAmount, collateralId, address(collateralContract), block.timestamp + loanDuration);
    }

    function repayLoan(uint256 loanId) external payable {
        Loan storage loan = loans[loanId];
        require(msg.sender == loan.borrower, "Only the borrower can repay the loan");
        require(!loan.repaid, "Loan already repaid");

        // Calculate repayment amount with 5% interest
        uint256 repaymentAmount = loan.loanAmount * 105 / 100;
        require(msg.value == repaymentAmount, "Incorrect repayment amount");

        loan.repaid = true;
        payable(loan.lender).transfer(repaymentAmount);
        loan.collateralContract.transferFrom(address(this), loan.borrower, loan.collateralId);

        emit LoanRepaid(loanId);
    }

    function checkLoanDefault(uint256 loanId) external {
        Loan storage loan = loans[loanId];
        require(block.timestamp > loan.dueDate, "Loan is not overdue yet");
        require(!loan.repaid, "Loan already repaid");

        loan.collateralContract.transferFrom(address(this), loan.lender, loan.collateralId);

        emit LoanDefaulted(loanId);
    }
}